<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".DepoisDoLogin.Utilizador.ListaWhen2MeetCriados">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DepoisDoLogin.Utilizador.Inicio"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/top_black_square"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:background="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/center_icon"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/logo" />

                <ImageView
                    android:id="@+id/second_icon"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/arrow_back" />

                <ImageView
                    android:id="@+id/third_icon"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/perfil" />


            </FrameLayout>

            <TextView
                android:id="@+id/textview99999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Os seus When2Meet"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/top_black_square" />



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout5"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview99999"/>

            <TextView
                android:id="@+id/txtSemFavoritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ainda nÃ£o existem When2Meet Criados."
                android:textAlignment="center"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_marginTop="70dp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonwhen2meet" />

            <Button
                android:id="@+id/buttonwhen2meet"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/black"
                android:text="Criar Sondagem"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView13"
                android:layout_width="390dp"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonwhen2meet" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>