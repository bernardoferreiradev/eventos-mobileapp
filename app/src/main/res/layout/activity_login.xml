<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="1100dp"
        android:layout_height="1100dp"
        android:src="@drawable/ewf"
        android:scaleType="centerCrop"
        android:alpha="0.1"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="300dp"
        android:rotation="0"
        android:translationX="50dp"
        android:translationY="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-10dp"
            android:layout_marginBottom="40dp"
            android:text="Vamos\nComeçar?"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="0dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress3"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_background"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="0dp"
            android:text="Palavra-passe"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/input_background"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="12dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-50dp"
            android:layout_marginBottom="20dp"
            android:text="Esqueceu-se da sua palavra-passe?"
            android:textColor="#375955"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonParaNome"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="36dp"
            android:backgroundTint="@color/black"
            android:radius="12dp"
            android:text="Iniciar Sessão"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="goToSignUp"
            android:text="Ainda não tem uma conta? Registe-se Aqui!"
            android:textColor="#375955"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="goToSignUpFornecedor"
            android:text="Torne-se um Fornecedor!"
            android:textColor="#375955"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>